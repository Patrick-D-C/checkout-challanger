{
  "name": "patrick/checkout-challenge",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "autoload": {
    "psr-4": { "App\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "Tests\\": "tests/" }
  },
  "scripts": {
    "test": "phpunit",
    "stan": "phpstan analyse src --level=max",
    "cs:fix": "php-cs-fixer fix --allow-risky=yes",
    "cs:check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes"
  }
}